                }
            });
        });
        //
         function PopupForm(url) {
                
                var formDiv = $('<div/>');
                $.get(url).done(function (response) {
                    formDiv.html(response);
                    popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        modal: true,
                        my: "center",
                        at: "center",
                        of: window,
                        draggable: false,
                        title: "Add SubDepartment",
                        height: 300,
                        width: 400,
                        close: function () {
                            popup.dialog('destroy').remove();
                        }
                    });
                })
            }

            function SubmitForm(form) {
                
                $.validator.unobtrusive.parse(form);
                if ($(form).valid()) {
                    $.ajax({
                        type: "POST",
                        url: form.action,
                        data: $(form).serialize(),
                        success: function (data) {
                            
                            if (data.success) {
                               // alert("hello");
                                popup.dialog('close');
                                dataTable.ajax.reload();
                                $.notify(data.message,
                                    {
                                        globalPosition: "top center",
                                        className: "success"
                                    })
                            }
                        }
                    });
                }
                return false;
            }

            function Delete(id) {
                if (confirm('Are you sure you want to delete the Subdepartment record?')) {

                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("DeleteSubDepartment", "Employee")/' + id,
                        success: function (data) {
                            dataTable.ajax.reload();
                            $.notify(data.message,
                                {
                                    globalPosition: "top center",
                                    className: "success"
                                })
                        }
                    });
                }
            }

        //
    </script>
