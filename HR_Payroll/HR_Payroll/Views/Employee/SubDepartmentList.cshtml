@model HR_Payroll.Models.Sub_Department
@{
    ViewBag.Title = "SubDepartmentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<style>
    .ui-widget-overlay {
        background: black !important;
        opacity: 0.5 !important;
    }
</style>
<link href="~/Content/dataTables.bootstrap4.css" rel="stylesheet" />

<style>
    .table-wrapper {
        background: #fff;
        padding: 20px 25px;
        margin: 30px 0;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
    }

    .table-title {
        padding-bottom: 15px;
        background: #005a6e;
        color: #fff;
        padding: 5px 5px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
    }

        .table-title h2 {
            margin: 5px 0 0;
            font-size: 24px;
        }

        .table-title .btn-group {
            float: right;
        }

        .table-title .btn {
            color: #fff;
            float: right;
            font-size: 13px;
            border: none;
            min-width: 50px;
            border-radius: 2px;
            border: none;
            outline: none !important;
            margin-left: 10px;
        }

            .table-title .btn i {
                float: left;
                font-size: 21px;
                margin-right: 5px;
            }

            .table-title .btn span {
                float: left;
                margin-top: 2px;
            }
</style>
<br />
<div class="form-group">
    @if (ViewBag.DeptList != null)
    {
        @Html.DropDownListFor(model => model.Department_ID, ViewBag.DeptList as SelectList, "---Select All---", new { @class = "form-control" })

    }
</div>

<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Sub Department</h2>
            </div>
            <div class="col-sm-6">
                <button type="button" class="btn btn-default btn-md" onclick="PopupForm('@Url.Action("AddUpdateSubDepartment","Employee")')">
                    <i class="fa fa-plus"></i><span>&nbsp;&nbsp;Add Sub Department&nbsp;&nbsp;</span>
                </button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table id="SubDeptData" style="width:100%;" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Sub_Department_ID</th>
                        <th>Sub Department Name</th>
                        <th>Department Name</th>
                        <th>Department_ID</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


