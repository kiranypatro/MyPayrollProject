                "columns": [
                    { "data": "Sub_Department_ID" },
                    { "data": "Sub_Department_Name" },
                    { "data": "Department_Name" },
                    { "data": "Department_ID" },

                    {
                        "data": "Sub_Department_ID", "render": function (data) {
                            return "<a onclick=PopupForm('@Url.Action("AddUpdateSubDepartment", "Employee")/"+ data +"')><i class='fa fa-check'></i>  </a><a onclick=Delete("+ data +")><i class='fa fa-trash'></i></a>"

                        },
                        "orderable": false,
                        "searchable": false,

                        "width": "100px"
                    }
                    ],
                    "columnDefs" : [
                        {
                            "targets": [0],
                            "visible": false

                        },
                        {
                            "targets": [3],
                            "visible": false
                        }
                ],
                "language": {
                    "emptyTable": "No data found, Please click on <b>Add Sub Department</b> Button"
                }
            });
        });
