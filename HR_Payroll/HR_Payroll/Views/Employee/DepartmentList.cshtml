@section scripts{

    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        var popup, dataTable;
        $(document).ready(function () {

            dataTable = $("#DepartmentData").DataTable({
                "ajax": {
                    "url": "/Employee/GetDepartmentData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Department_ID" },
                    { "data": "Department_Name" },
                    {
                        "data": "Department_ID", "render": function (data) {
                            return "<a onclick=PopupForm('@Url.Action("AddUpdateDepartment", "Employee")/"+ data +"')><i class='fa fa-check'></i>  </a><a onclick=Delete("+ data +")><i class='fa fa-trash'></i></a>"

                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "100px"
                    },
                ],
                "columnDefs": [
                    {
                        "targets": 0,
                        "visible": false
                    }],
                "language": {
                    "emptyTable": "No data found, Please click on <b>Add New</b> Button"
                }
            });
        });
        function PopupForm(url) {
           
            var formDiv = $('<div/>');
            $.get(url).done(function (response) {
                formDiv.html(response);
                popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: false,
                    modal: true,
                    my: "center",
                    at: "center",
                    of: window,
                    draggable: false,
                    title: "Add Department",
                    height: 250,
                    width: 300,
                    close: function () {
                        popup.dialog('destroy').remove();
                    }
                });
            })
        }

        function SubmitForm(form) {
            
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        
                        if (data.success) {
                            popup.dialog('close');
                            dataTable.ajax.reload();
                            $.notify(data.message,
                                {
                                    globalPosition: "top center",
                                    className: "success"
                                })
                        }
                    }
                });
            }
            return false;
        }

        function Delete(id) {
            if (confirm('Are you sure you want to delete the department record?')) {

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteDepartment","Employee")/' + id,
                    success: function (data) {
                        dataTable.ajax.reload();
                        $.notify(data.message,
                            {
                                globalPosition: "top center",
                                className: "success"
                            })
                    }


                });
            }
        }



    </script>
}


