@model HR_Payroll.Models.Asset_Sub_Category

@{

    Layout = null;
    ViewBag.Title = "AddUpdateSubAssetCategory";

}

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@using (Html.BeginForm("AddUpdateSubAssetCategory", "Employee", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Asset_Sub_Category_ID)

    <div class="form-group">
        @Html.Label("Asset Category Name", new { @class = "control-label" })

        @Html.DropDownList("Asset_Category_ID", new SelectList(ViewBag.AssetCategory, "Asset_Category_ID", "Category_Name"), "Please select", new { @id = "Asset_Category_ID", @class = "form-control form-control-sm" })
        @Html.ValidationMessageFor(model => model.Asset_Category_ID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Sub Category Code", new { @class = "control-label" })

        @Html.EditorFor(model => model.Sub_Category_Code, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
        @Html.ValidationMessageFor(model => model.Sub_Category_Code, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.Label("Sub Category Name", new { @class = "control-label" })

        @Html.EditorFor(model => model.Sub_Category_Name, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
        @Html.ValidationMessageFor(model => model.Sub_Category_Name, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.Label("Purchase Date", new { @class = "control-label" })

        @*@Html.TextBoxFor(model => model.SubAsset_Purchase_Date, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control form-control-sm datepicker", @type = "date" } })*@

        @Html.TextBoxFor(model => model.SubAsset_Purchase_Date, new { @class = "form-control input-sm datepicker", @type = "date" })
        @*@Html.ValidationMessageFor(model => model.SubAsset_Purchase_Date, "", new { @class = "text-danger" })*@
        @Html.ValidationMessageFor(model => model.SubAsset_Purchase_Date, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.Label("Warranty Date", new { @class = "control-label" })
        @Html.TextBoxFor(model => model.SubAsset_Warranty_Date, "{0:yyyy-MM-dd}", new { @class = "form-control input-sm datepicker", @type = "date" })
        @Html.ValidationMessageFor(model => model.SubAsset_Warranty_Date, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.Label("Model No", new { @class = "control-label" })
        @Html.EditorFor(model => model.SubAsset_ModelNo, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
        @Html.ValidationMessageFor(model => model.SubAsset_ModelNo, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <input type="reset" value="Cancel" class="btn btn-primary" />
    </div>

}

